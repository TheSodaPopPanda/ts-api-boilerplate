{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "watch": true,
    // "pretty": true,
    "outDir": "build",
    "importHelpers": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    // "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
        "es5",
        "es6",
        "dom",
        "es2015.core",
        "es2015.collection",
        "es2015.generator",
        "es2015.iterable",
        "es2015.promise",
        "es2015.proxy",
        "es2015.reflect",
        "es2015.symbol",
        "es2015.symbol.wellknown",
        "esnext.asynciterable"
    ]
  },
  "exclude": [
    "node_modules",
    "tests",
  ],
}
